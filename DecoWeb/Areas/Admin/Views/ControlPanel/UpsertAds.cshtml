@model AdsImageVM

<div class="card shadow border-0 my-4 mb-5 pb-5">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.AdsImage.Id != 0 ? "Update" : "Create") Ads
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="AdsImage.Id" hidden />
            <input asp-for="AdsImage.ImageUrl" hidden/>
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AdsImage.Title" class="form-control border-0 shadow" />
                            <label asp-for="AdsImage.Title" class="ms-2"></label>
                            <span asp-validation-for="AdsImage.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AdsImage.Description" class="form-control border-0 shadow" />
                            <label asp-for="AdsImage.Description" class="ms-2"></label>
                            <span asp-validation-for="AdsImage.Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="AdsImage.AdsTypeId" asp-items="@Model.AdsTypeList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="AdsImage.AdsTypeId" class="ms-2"></label>
                            <span asp-validation-for="AdsImage.AdsTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="AdsImage.Url" class="form-control border-0 shadow" />
                            <label asp-for="AdsImage.Url" class="ms-2"></label>
                            <span asp-validation-for="AdsImage.Url" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-6">
                            <div class="form-check form-switch">
                                <input asp-for="AdsImage.IsActive" class="form-check-input" type="checkbox">
                                <label class="ms-2 text-muted" for="AdsImage_IsActive">Enable Ads</label>
                            </div>
                        </div>
                        <div class="form-floating py-2 col-6">
                            <input asp-for="AdsImage.SortNumber" class="form-control border-0 shadow" />
                            <label asp-for="AdsImage.SortNumber" class="ms-2"></label>
                            <span asp-validation-for="AdsImage.SortNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label for="AdsImage_ImageUrl" class="ms-2"></label>
                        </div>
                        <div asp-validation-summary="All"></div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.AdsImage.Id != 0)
                                {
                                    <button type="submit" class="btn btn-dark form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-dark form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="ControlPanel" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    @if (Model.AdsImage != null)
                    {
                        <div class="border p-1 m-2 text-center">
                            <img src="@Model.AdsImage.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts {
    @{
        //Use Model validate in client-side
        <partial name="_ValidationScriptsPartial" />
    }
}